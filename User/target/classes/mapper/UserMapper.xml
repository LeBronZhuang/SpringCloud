<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.qf.dao.IUserDao">

    <sql id="all">
        select * from user
    </sql>

    <select id="getAllUser" resultType="user">
        <include refid="all"></include>
    </select>
    <resultMap type="com.qf.pojo.User" id="UserMap">
        <result property="uid" column="uid" jdbcType="INTEGER"/>
        <result property="username" column="username" jdbcType="VARCHAR"/>
        <result property="password" column="password" jdbcType="VARCHAR"/>
        <result property="tel" column="tel" jdbcType="VARCHAR"/>
        <result property="addr" column="addr" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="UserMap">
        select
          uid, username, password, tel, addr
        from ssss.user
        where uid = #{uid}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="UserMap">
        select
          uid, username, password, tel, addr
        from ssss.user
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="UserMap">
        select
        uid, username, password, tel, addr
        from ssss.user
        <where>
            <if test="uid != null">
                and uid = #{uid}
            </if>
            <if test="username != null and username != ''">
                and username = #{username}
            </if>
            <if test="password != null and password != ''">
                and password = #{password}
            </if>
            <if test="tel != null and tel != ''">
                and tel = #{tel}
            </if>
            <if test="addr != null and addr != ''">
                and addr = #{addr}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="uid" useGeneratedKeys="true">
        insert into ssss.user(username, password, tel, addr)
        values (#{username}, #{password}, #{tel}, #{addr})
    </insert>

    <insert id="insertBatch" keyProperty="uid" useGeneratedKeys="true">
        insert into ssss.user(username, password, tel, addr)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.username}, #{entity.password}, #{entity.tel}, #{entity.addr})
        </foreach>
    </insert>

    <insert id="insertOrUpdateBatch" keyProperty="uid" useGeneratedKeys="true">
        insert into ssss.user(username, password, tel, addr)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.username}, #{entity.password}, #{entity.tel}, #{entity.addr})
        </foreach>
        on duplicate key update
        username = values(username) , password = values(password) , tel = values(tel) , addr = values(addr)
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update ssss.user
        <set>
            <if test="username != null and username != ''">
                username = #{username},
            </if>
            <if test="password != null and password != ''">
                password = #{password},
            </if>
            <if test="tel != null and tel != ''">
                tel = #{tel},
            </if>
            <if test="addr != null and addr != ''">
                addr = #{addr},
            </if>
        </set>
        where uid = #{uid}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from ssss.user where uid = #{uid}
    </delete>
    <select id="selectAllUser" resultMap="UserMap">
        select * from user
    </select>
    <select id="getUsername" resultMap="UserMap">
        select * from user where username=#{username}
    </select>
</mapper>